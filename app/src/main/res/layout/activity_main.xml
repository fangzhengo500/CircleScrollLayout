<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <com.loosu.ringscrolllayout.RingScrollLayout
        android:id="@+id/layout_ring"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#ff6"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="10dp"
            android:background="@mipmap/ic_launcher"
            android:gravity="center"
            android:text="1" />

        <TextView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@mipmap/ic_launcher"
            android:gravity="center"
            android:text="2" />

        <TextView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@mipmap/ic_launcher"
            android:gravity="center"
            android:text="3" />

        <TextView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@mipmap/ic_launcher"
            android:gravity="center"
            android:text="4" />

        <TextView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@mipmap/ic_launcher"
            android:gravity="center"
            android:text="5" />

        <TextView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@mipmap/ic_launcher"
            android:gravity="center"
            android:text="6" />

        <TextView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@mipmap/ic_launcher"
            android:gravity="center"
            android:text="7" />

        <TextView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@mipmap/ic_launcher"
            android:gravity="center"
            android:text="8" />
    </com.loosu.ringscrolllayout.RingScrollLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/circle_radius"
                android:textSize="@dimen/text_size_normal" />

            <SeekBar
                android:id="@+id/seek_radius"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="1000" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="@string/center_x"
                    android:textSize="@dimen/text_size_normal" />

                <SeekBar
                    android:id="@+id/seek_center_x"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="1000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="@string/center_y"
                    android:textSize="@dimen/text_size_normal" />

                <SeekBar
                    android:id="@+id/seek_center_y"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="1000" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>